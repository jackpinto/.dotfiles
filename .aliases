# git stuff
alias total-commits="git shortlog | grep -E '^[ ]+\w+' | wc -l | trim"

alias pg='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log'
alias psql='/usr/local/bin/psql postgres'

alias opendiff='/Applications/Xcode.app/Contents/Developer/usr/bin/opendiff'

alias wip="git add .; git commit -am 'wip'"
alias ipaddr='ifconfig | grep 192'

alias ng-dart-server='/usr/local/bin/node node_modules/karma/bin/karma start karma.conf --reporters dots --port 8765 --browsers=ChromeCanary --report-slower-than=100'
alias ng-dart-run='/usr/local/bin/node node_modules/karma/bin/karma run --port 8765'

function h {
  PORT=$1
  if [ -z $PORT ]; then
    PORT=5000
  fi 
  open "http://localhost:$PORT"
  http-server -p $PORT
}
alias hh='h 6666'
alias ng='cd /www/angular.js'
alias ngd='cd /www/angular.dart'
alias gukp='gulp'

function install-angular {
  mkdir angular
  cd angular
  wget https://code.angularjs.org/snapshot/angular.js
  wget https://code.angularjs.org/snapshot/angular-animate.js
  wget https://code.angularjs.org/snapshot/angular-messages.js
  wget https://code.angularjs.org/snapshot/angular-route.js
  cd -
}
function install-jquery {
  mkdir jquery
  cd jquery
  wget https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.js
  cd -
}

alias yom='./yom'

alias dns-cname='nslookup -d -type=cname'
